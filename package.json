{
    "name": "web-playground",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "dev": "multi-static-dev --config ./configs/main.config.js",
        "build": "multi-static-build --config ./configs/main.config.js",
        "prettier": "prettier-eslint --write \"src/**/*.{js,json,css}\"",
        "lint": "eslint src/**/*.js"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "linters": {
            "src/**/*.{js}": [
                "prettier-eslint --write",
                "git add"
            ]
        },
        "concurrent": false
    },
    "devDependencies": {
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-config-prettier": "^4.3.0",
        "eslint-plugin-import": "^2.17.2",
        "prettier-eslint": "^8.8.2",
        "prettier-eslint-cli": "^4.7.1",
        "husky": "^2.3.0",
        "lint-staged": "^8.1.7"
    },
    "dependencies": {
        "@babel/core": "7.8.4",
        "@babel/plugin-proposal-class-properties": "7.8.3",
        "@babel/plugin-transform-runtime": "7.8.3",
        "@babel/polyfill": "7.8.3",
        "@babel/preset-env": "7.9.0",
        "@babel/runtime": "7.8.4",
        "autoprefixer": "9.7.6",
        "babel-loader": "^8.2.2",
        "core-js": "3",
        "glslify-loader": "^2.0.0",
        "jquery": "^3.6.0",
        "localhost-certs": "1.0.0",
        "lodash": "^4.17.21",
        "mocker-api": "1.11.2",
        "multi-static": "^0.1.3",
        "mustache": "4.2.0",
        "node-sass": "4.12.0",
        "postcss": "7.0.27",
        "raw-loader": "^4.0.2",
        "read-first-line": "1.0.5",
        "static-hash-version": "1.0.0",
        "terser-webpack-plugin": "2.3.4",
        "webpack": "4.41.5",
        "webpack-dev-middleware": "3.7.2"
    }
}
